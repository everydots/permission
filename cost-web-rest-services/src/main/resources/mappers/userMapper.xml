<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.everydots.cost.dao.UserDao">

    <resultMap id="userMap" type="User">
        <id property="id" column="id" javaType="String"></id>
        <result property="username" column="username" javaType="String"></result>
        <result property="password" column="password" javaType="String"></result>
        <result property="email" column="email" javaType="String"></result>
    </resultMap>

    <insert id="insertUser" parameterType="User" timeout="20000">
        insert into user values(#{id},#{username},#{password},#{email})
    </insert>

    <select id="getUser" parameterType="String" resultType="User">
        select * from user where username=#{username}
    </select>
</mapper>